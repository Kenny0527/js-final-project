			integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/icon?family=Material+Icons"
		/>
		<link rel="stylesheet" href="/style.css" />
	</head>
	<body>
		
		<div class="row" id="nav">
			<div class="col-2" id="app_name">
				<p>TODO_APP</p>
			</div>
			<div class="col-10" id="nav_item">
				<p class="nav_item"><a href="home.html">Home</a></p>
				<p class="nav_item"><a href="about.html">About</a></p>
				<p class="nav_item"><a href="projects.ejs">Application</a></p>
			</div>
		</div>

    <div class="row" id="buttons_row">
      <div class="col-6"></div>
      <div class="col-6" id="edit_remove_btns">
        <button class="btn btn-warning btn_restore_all">Restore all</button>
        <button class="btn btn-danger btn_empty_recycle_bin">
          Empty recycle bin
        </button>
      </div>
    </div>

    <div class="row" id="project_name_row"></div>

    <div class="row">
      <div class="col-3" id="left_side_nav">
        <p class="left_nav_items"><a href="project.ejs">Projects</a></p>
        <p class="left_nav_items"><a href="tasks.ejs">Tasks</a></p>
        <p class="left_nav_items"><a href="calendar.ejs">Calendar</a></p>
        <p class="left_nav_items"><a href="recycle_bin.ejs">Recycle bin</a></p>
      </div>

      <div class="col-9" id="main_container">
        <% for(var i = 0; i < recycle_bin.length; i++) {%>
        <div class="table">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">File name</th>
                <th scope="col">Restore file</th>
                <th scope="col">Delete file</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td><%= recycle_bin[i].title %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-dark"
                    data-bs-toggle="modal"
                    data-bs-target="#restore_selected_btn_modal"
                  >
                    Restore
                  </button>
                  <div
                    class="modal fade"
                    id="restore_selected_btn_modal"
                    tabindex="-1"
                    aria-labelledby="restore_selected_modal_label"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5
                            class="modal-title"
                            id="restore_selected_modal_label"
                          >
                            Restore
                          </h5>
                          <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>
                        <div class="modal-body">
                          <p>Restore this item?</p>
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                          >
                            Cancel
                          </button>
                          <button type="button" class="btn btn-primary">
                            Restore
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
                <td>
                  <button
                    type="button"
                    class="btn btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#empty_recycle_bin_btn_modal"
                  >
                    Remove
                  </button>
                  <div
                    class="modal fade"
                    id="empty_recycle_bin_btn_modal"
                    tabindex="-1"
                    aria-labelledby="empty_recycle_bin_btn_modal"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5
                            class="modal-title"
                            id="empty_recycle_bin_btn_modal"
                          >
                            Remove
                          </h5>
                          <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>
                        <div class="modal-body">
                          <p>Remove this items from the Recycle bin</p>
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                          >
                            Cancel
                          </button>
                          <button type="button" class="btn btn-danger">
                            Remove
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </div>
    <nav
      class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top navbar-"
      style="height: 35px"
    >
      <a href="#" class="navbar-brand mb-0 h1">
        <img
          class="d-inline-block align-top"
          src="https://media.istockphoto.com/vectors/check-vector-id871478670?k=20&m=871478670&s=612x612&w=0&h=qh3cQ0BOokeBWiJQp6fvjX-JpIIimTtAOkwe_Yt0y6k="
          alt="picture of checkmark"
          width="50"
          height="30"
        />
        TODO
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-nav"
        class="navbar-toggler"
        aria-controls="navbar-nav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

			<div class="collapse navbar-collapse" id="navbar-nav">
				<ul class="navbar-nav">
					<!-- link for home -->
					<li class="nav-item active">
						<a class="nav-link active" href="./Views/home.html">Home</a>
					</li>

					<!-- link for about -->
					<li class="nav-item active">
						<a class="nav-link active" href="./Views/about.html">About</a>
					</li>

          <!-- link for login
          <li class="nav-item active">
              <a class="nav-link active" href="#">Login</a>
          </li> -->
        </ul>
      </div>
    </nav>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
